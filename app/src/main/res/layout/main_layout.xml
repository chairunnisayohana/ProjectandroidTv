<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:configChanges="screenSize|keyboardHidden"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bf">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="372dp"
        android:layout_height="245dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="193dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/converse"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/icon_converse" />

            <ImageView
                android:id="@+id/nike"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                app:srcCompat="@drawable/icon_nike" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/adidas"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/icon_adidas" />

            <ImageView
                android:id="@+id/vans"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                app:srcCompat="@drawable/icon_vans" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="137dp"
        android:layout_height="242dp"
        android:alpha="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491"
        app:srcCompat="@drawable/diskon" />
</androidx.constraintlayout.widget.ConstraintLayout>